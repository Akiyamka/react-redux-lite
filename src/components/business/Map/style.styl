@require '~Config/style/variables.styl';

.map
  width: 100%
  height: 100%

.mark
  position: absolute
  display: flex
  align-items: center
  justify-content: center
  &:after
    height: 20px;
    width: 20px
    border: 1px solid color-accent
    border-radius: 50%
    border-bottom-left-radius: 0
    content: ''
    transform: rotate(-45deg) translateY(-10px) translateX(14px)
    background-color: rgba(255, 255, 255, 1)
    box-shadow: 0px 0px 0px 2px rgb(255, 255, 255)
    z-index: -1

  &:before
    content: ''
    width: 10px
    height: 10px
    background: color-accent
    border-radius: 50%
    position: absolute
    transform: rotate(-45deg) translateY(-10px) translateX(14px)
