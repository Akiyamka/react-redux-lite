@require '~Config/style/variables.styl'

.loadingSpinner
  height: 30px
  overflow: hidden
  width: 300px
  box-shadow: 0 2px 2px rgba(0, 0, 0, 0.15)
  display: flex
  align-items: center
  justify-content: center
  border-radius: 4px
  border: 1px solid rgba(0, 0, 0, 0.15)
  position: relative
  background-color: rgba(255, 255, 255, 0.8)

.loadingSpinnerText
  position: absolute
  text-transform: uppercase
  font-size: 11px

.sonar
  width: 300px
  height: 300px
  position: relative

.sonarAnimationWave
  border-radius: 50%
  background-color: rgba(0,80,140,0.3)
  width: 300px
  height: 300px
  animation-name: sonar-animation
  animation-duration: 2s
  animation-iteration-count: infinite
  opacity: 0
  position: absolute

@keyframes sonar-animation {
  from { transform: scale(0); opacity: 1 }
  to { transform: scale(1); opacity: 0 }
}